{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "lib": ["es6"],
      "outDir": "build",
      "rootDir": "src",
      "strict": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "noImplicitAny": true
  },
  "exclude": [
      "node_modules",
      ".vscode"
  ]
}